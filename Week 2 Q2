string p1 = "2x3 + 1x2 + 2x + 1";
string p2 = "3x2 + 1x + 9";



void poly1Res(string polynomialOne){

    p1x3 = p1.find("x3");
    p1x3p = p1x3 - 1;
    //'-0' converts character into an integer
    p1x3n = p1[p1x3p] - '0';

    p1x2 = p1.find("x2");
    p1x2p = p1x2 - 1;
    p1x2n = p1[p1x2p] - '0';

    // To find the number ax3 + bx2 + cx + d
    // Therefore to find c

    p1x = p1.find_last_of("x");
    p1xp = p1x - 1;
    p1xn = p1[p1xp] - '0';

    // To find the number ax3 + bx2 + cx + d
    // Therefore to find d
    p1nc = p1.find_last_of("+");
    p1np = p1nc + 2;
    p1n = p1[p1np] - '0';

    int p1Array[] = {p1x3n, p1x2n, p1xn, p1n};
    //int p1ArrayReverse[] = {p1n, p1xn, p1x2n, p1x3n};
    int arrayp1Size = sizeof(p1Array)/ sizeof(int);
    int degreep1 = arrayp1Size - 1;

    //cout << arraySize << endl;

    cout << "Degree = " << degreep1 << "    " << "[";
    for(int x = 0; x < arrayp1Size; x++){
        cout << p1Array[x] << ", ";

        //To make the array look neat
        if( x == 2){
            cout << p1Array[3] << "]"<< endl;
            x=4;
        }

    }

}

void poly2Res(string polynomialOne){

    p2x2 = p2.find("x2");
    p2x2p = p2x2 - 1;
    p2x2n = p2[p2x2p] - '0';

    // To find the number ax3 + bx2 + cx + d
    // Therefore to find c

    p2x = p2.find_last_of("x");
    p2xp = p2x - 1;
    p2xn = p2[p2xp] - '0';

    // To find the number bx2 + cx + d
    // Therefore to find d
    p2nc = p2.find_last_of("+");
    p2np = p2nc + 2;
    p2n = p2[p2np] - '0';

    int p2Array[] = {p2x2n, p2xn, p2n};
    int p2ArrayReverse[] = {p2n, p2xn, p2x2n};
    int arrayp2Size = sizeof(p2Array)/ sizeof(int);
    int degreep2 = arrayp2Size - 1;

    //cout << arraySize << endl;

    cout << "Degree = " << degreep2 << "    " << "[";
    for(int x = 0; x < arrayp2Size; x++){
        cout << p2Array[x] << ", ";

        //To make the array look neat
        if( x == 1){
            cout << p2Array[2] << "]"<< endl;
            x=3;
        }
        
        return p2Array

    }

}

 resFunction(){
    for(i = 0; i < arrayp1Size; i++){
            for(j = 0; j < arrayp2Size; j++){
                res[i + j] = (arrayp1Size[i] + arrayp2Size[j]) + (p1ArrayReverse[i] * p2ArrayReverse[j]);
            }
            return res[];
    }
}



int main()
{
    /*cout << "Please enter a polynonmial in the format ax3 + bx2 + cx + d" <<endl;
