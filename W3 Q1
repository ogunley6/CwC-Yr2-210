#include <iostream>
#include <vector>
#include <algorithm>
#include <sstream>

using namespace std;
vector <string> sReverse;
int x, b;
string y, userSentence;

int main()
{
    cout << "Please enter a string to be mirrored" << endl;

    string userSentence;
    string y;
    getline(cin, userSentence); //gets the entire line
    stringstream ss(userSentence);

    //this second getline function reads till each space
    while(getline(ss, y, ' ')){
    sReverse.push_back(y);

    }

    // I used this for loop as a test to make sure that words were being put into the vector
    /*for(b = 0; b < sReverse.size(); b++){
        cout << sReverse[b] << " ";
    } */


//This for loop underneath reverses each element of the vector so in this case its stings
//Therefore this loop will reverse each string
    for(x = 0; x < sReverse.size(); x++){
    reverse(begin(sReverse[x]), end(sReverse[x]));
    cout << sReverse[x] << " ";
}

    return 0;
}
